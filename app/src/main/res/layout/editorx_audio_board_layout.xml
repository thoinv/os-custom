<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/multi_level_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.quvideo.xiaoying.editorx.board.audio.base.RootOperateView
        android:id="@+id/root_operate_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left|center_vertical|center_horizontal|center"
        android:layout_marginBottom="100dp"
        android:scaleType="fitXY" />

    <com.quvideo.xiaoying.editorx.widget.GuideView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
