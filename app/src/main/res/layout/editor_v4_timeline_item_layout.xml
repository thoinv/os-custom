<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_imgview_bg"
        android:layout_width="@dimen/v5_xiaoying_timeline_item_width"
        android:layout_height="@dimen/v5_xiaoying_timeline_item_width">

        <ImageView
            android:id="@+id/imgview_thumbnail"
            android:layout_width="@dimen/v5_xiaoying_timeline_item_width"
            android:layout_height="@dimen/v5_xiaoying_timeline_item_width"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/xiaoying_com_time_line_default_thumb" />
    </RelativeLayout>
</RelativeLayout>
