<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_expand" android:background="@color/color_141414" android:layout_width="match_parent" android:layout_height="242dp" android:layout_above="@+id/etv_tab">
        <RelativeLayout android:id="@+id/board_top" android:layout_width="match_parent" android:layout_height="30dp">
            <ImageButton android:id="@+id/btn_expand" android:background="@null" android:paddingLeft="20dp" android:paddingRight="20dp" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/editorx_selector_gallery_board_arrow" android:layout_centerHorizontal="true" android:paddingStart="20dp" android:paddingEnd="20dp"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center_horizontal" android:id="@+id/recycler_choose_item" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/board_top"/>
        <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center_horizontal" android:id="@+id/recycler_choose_video" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/board_top"/>
        <RelativeLayout android:id="@+id/layout_gif" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/board_top">
            <RelativeLayout android:id="@+id/layout_search" android:background="@drawable/editorx_shape_galley_gif_search" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
                <ImageView android:id="@+id/iv_search" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/editorx_icon_search" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
                <com.quvideo.xiaoying.editorx.widget.UKeyBackEditText android:textSize="14sp" android:textColor="@color/color_e6e6e6" android:textColorHint="@color/color_525252" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/btn_search_gif" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/xiaoying_str_ve_collage_search_gif_hint" android:singleLine="true" android:imeOptions="actionSearch" android:textCursorDrawable="@drawable/v4_xiaoying_com_edittext_cursor" android:layout_marginStart="8dp" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/iv_search"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center_horizontal" android:id="@+id/recycler_choose_gif" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="12dp" android:layout_below="@+id/layout_search" android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_loading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:indeterminateDrawable="@drawable/xiaoying_com_progressbar_loading_img" android:indeterminateDuration="1000" style="@style/Widget.ProgressBar.Small.Inverse"/>
            <TextView android:textSize="14sp" android:textColor="@color/color_919191" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="50dp" android:text="@string/xiaoying_str_com_loading" android:layout_marginStart="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.quvideo.xiaoying.editorx.board.effect.ui.effectTab.EffectTabView android:id="@+id/etv_tab" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginBottom="44dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
