<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_seekbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/seekbar_play"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/editor_selector_video_play_icon" />

    <TextView
        android:id="@+id/txtview_cur_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:shadowColor="#40000000"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_p50"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekbar_simple_edit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_toStartOf="@+id/txtview_duration"
        android:layout_toLeftOf="@+id/txtview_duration"
        android:layout_toEndOf="@+id/txtview_cur_time"
        android:layout_toRightOf="@+id/txtview_cur_time"
        android:focusable="true"
        android:max="100"
        android:maxHeight="2dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:progress="0"
        android:progressDrawable="@drawable/xiaoying_music_extarct_direct_layer_preview_seekbar_progress"
        android:splitTrack="false"
        android:thumb="@drawable/xiaoying_music_extract_selector_video_seekbar"
        android:thumbOffset="4dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtview_duration"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:shadowColor="#40000000"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white_p50"
        android:textSize="12sp" />
</RelativeLayout>
