                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_original" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="15dp" app:stv_selected="true" app:stv_text="@string/xiaoying_str_magic_sound_original"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_self" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="18dp" app:stv_text="@string/xiaoying_str_magic_sound_self"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_woman" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="18dp" app:stv_text="@string/xiaoying_str_magic_sound_m_to_w"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_man" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="6dp" app:stv_text="@string/xiaoying_str_magic_sound_w_to_m"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_tom" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="6dp" app:stv_text="@string/xiaoying_str_magic_sound_tom_cat"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_luoli" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="6dp" app:stv_text="@string/xiaoying_str_magic_sound_loli"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_alien" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="6dp" app:stv_text="@string/xiaoying_str_magic_sound_alien"/>
                <com.quvideo.xiaoying.editorx.widget.SelectTextView android:id="@+id/sound_elder" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="6dp" app:stv_text="@string/xiaoying_str_magic_sound_elder"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
