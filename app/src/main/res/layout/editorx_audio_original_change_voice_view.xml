<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/group_sound_root" android:background="@drawable/editorx_audio_record_chang_voice_shape" android:layout_width="match_parent" android:layout_height="240dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0">
        <com.quvideo.xiaoying.xyui.view.CustomHandleView android:id="@+id/sound_change_title_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:chv_title_text="@string/xiaoying_str_clip_func_magic_sound"/>
        <com.quvideo.xiaoying.timeline.fixed.scale.ScaleTimeline android:id="@+id/scale_timeline" android:layout_width="match_parent" android:layout_height="65dp"/>
