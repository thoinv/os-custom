<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/rl_board" android:background="@drawable/editorx_drawer_bg" android:layout_width="match_parent" android:layout_height="360dp" android:layout_alignParentBottom="true">
        <com.quvideo.xiaoying.xyui.view.CustomHandleView android:id="@+id/chv_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:chv_hide_right_text="true" app:chv_title_text="@string/xiaoying_str_speech_to_text_speech_title" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/veds_color_fill_white_2" android:id="@+id/tv_speech_title2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="12dp" android:text="@string/xiaoying_str_speech_to_text_speech_choice_source" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/veds_latn_font_subtitle_14"/>
        <RelativeLayout android:id="@+id/rl_video" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="16dp">
            <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/veds_color_fill_orange_50" android:gravity="center_vertical" android:id="@+id/tv_speech_select_video" android:background="@drawable/editorx_speech_shape_select" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/xiaoying_str_speech_to_text_video_sound" android:paddingStart="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/veds_latn_font_subtitle_16"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_speech_select_video" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/editorx_speech_icon_select" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="32dp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_record" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="28dp">
            <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/veds_color_fill_white_1" android:gravity="center_vertical" android:id="@+id/tv_speech_select_record" android:background="@drawable/editorx_speech_shape_select" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/xiaoying_str_speech_to_text_video_audio" android:paddingStart="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/veds_latn_font_subtitle_16"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_speech_select_record" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/editorx_speech_icon_select" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="32dp"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="@color/veds_color_fill_white_3" android:id="@+id/tv_speech_select_record_empty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/xiaoying_str_speech_to_text_speech_no_audio" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="32dp"/>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/veds_color_fill_black_6" android:gravity="center" android:id="@+id/tv_speech_start" android:background="@drawable/editorx_speech_shape_start_btn" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/xiaoying_str_speech_to_text_begin" android:layout_marginStart="56dp" android:layout_marginEnd="56dp" style="@style/veds_latn_font_subtitle_16"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/ivDelete" android:padding="4dp" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/editorx_speech_icon_clear_off"/>
            <androidx.appcompat.widget.AppCompatTextView android:textColor="@color/veds_color_fill_white_2" android:id="@+id/tv_clean_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/xiaoying_str_speech_to_text_clear_all_text" android:layout_marginStart="4dp" style="@style/veds_latn_font_subtitle_12"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
